<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="center" hgap="10" prefHeight="300.0" prefWidth="380.0" vgap="10" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <AnchorPane fx:id="mainPanel" prefHeight="300.0" prefWidth="380.0">
         <children>
            <Label layoutX="85.0" layoutY="22.0" text="Welcome to your personalized Agenda!" />
            <Button layoutX="130.0" layoutY="248.0" mnemonicParsing="false" onAction="#newWindowBtn" text="Go to the schedule " />
         </children>
      </AnchorPane>
      <AnchorPane fx:id="newPanel" prefHeight="313.0" prefWidth="466.0" visible="false">
         <children>
            <Label layoutX="120.0" layoutY="25.0" text="Welcome to the Schedule!" />
            <ProgressBar layoutX="95.0" layoutY="266.0" prefWidth="200.0" progress="0.0" />
            <TableView fx:id="tableView" editable="true" layoutX="20.0" layoutY="50.0" prefHeight="200.0" prefWidth="333.0">
              <columns>
                <TableColumn fx:id="time" prefWidth="95.0" text="Time" />
                <TableColumn fx:id="activity" text="Activity" />
                  <TableColumn fx:id="description" prefWidth="75.0" text="Description" />
              </columns>
            </TableView>
         </children>
      </AnchorPane>
   </children>
</GridPane>
